        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chihuaua, Chihuahua Mexico"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvNombre"
        android:id="@+id/tvCiudad"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Licenciado en Sistemas Computacionales Administrativos"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvCiudad"
        android:id="@+id/tvCarrera"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maestro en Sistemas de Informacion"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvCarrera"
        android:id="@+id/tvmaestria"/>
